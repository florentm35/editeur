<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.Group?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.Tab?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="fr.florent.map.editor.controller.MapEditorController"
            fx:id="parent">




    <VBox AnchorPane.bottomAnchor="0" AnchorPane.topAnchor="0" fx:id="splitPane"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">

        <TabPane fx:id="tabPane" tabClosingPolicy="ALL_TABS">

        </TabPane>

        <AnchorPane VBox.vgrow="ALWAYS">
            <ScrollPane fx:id="scrollPane" styleClass="transparent-background"
                        AnchorPane.bottomAnchor="0" AnchorPane.topAnchor="0"
                        AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
                <Group>
                    <VBox alignment="CENTER"
                          minHeight="${scrollPane.viewportBounds.height}">
                        <HBox alignment="CENTER" fx:id="hbox" minWidth="${scrollPane.viewportBounds.width}">
                            <Pane fx:id="paneMap">
                                <GridPane fx:id="boxImage"
                                          GridPane.columnIndex="1">
                                </GridPane>
                            </Pane>
                        </HBox>
                    </VBox>
                </Group>
            </ScrollPane>
        </AnchorPane>
    </VBox>

</AnchorPane>
